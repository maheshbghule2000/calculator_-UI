<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black"
            android:id="@+id/edittext"
            android:textSize="30dp"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textColor="@color/white"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/edittext"
            android:id="@+id/ll1"
            android:layout_marginTop="20dp"

           >
            <Button

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:text="7"
                android:background="@color/purple"
                android:textSize="20dp"
                android:id="@+id/n7"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="80dp"
                android:background="@color/purple"
                android:text="8"
                android:textSize="20dp"
                android:id="@+id/n8"/>
            <Button

                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/purple"
                android:text="9"
                android:textSize="20dp"
                android:id="@+id/n9"/>

            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/arth"
                android:text="+"
                android:textSize="20dp"
                android:id="@+id/nadd"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll1"
            android:id="@+id/ll2"
          >

            <Button
                android:id="@+id/n4"
                android:layout_marginLeft="10dp"
                android:background="@color/purple"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/n5"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/purple"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/n6"
                android:layout_marginLeft="10dp"
                android:background="@color/purple"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/nsub"
                android:background="@color/arth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:text="-"
                android:textSize="20dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll2"
            android:id="@+id/ll3">
            <Button
                android:background="@color/purple"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:id="@+id/n1"/>
            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/purple"
                android:text="2"
                android:textSize="20dp"
                android:id="@+id/n2"/>
            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/purple"
                android:text="3"
                android:textSize="20dp"
                android:id="@+id/n3"/>

            <Button
                android:layout_width="0dp"

                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:text="/"
                android:background="@color/arth"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/ndiv"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll4"
            android:layout_below="@id/ll3"
            >
            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/arth"
                android:text="."
                android:textSize="20dp"
                android:id="@+id/ndec"/>
            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/purple"
                android:text="0"
                android:textSize="20sp"
                android:id="@+id/n0"/>
            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@color/arth"
                android:text="="
                android:textSize="20dp"
                android:id="@+id/nequal"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/arth"
                android:text="X"
                android:textSize="20dp"
                android:id="@+id/nmul"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll4"
            >

            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="AC"

                android:textSize="20dp"
                android:background="@color/teal_200"
                android:id="@+id/clr"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="Sin()"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:id="@+id/Sin"/>
            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="Cos()"

                android:textSize="20dp"
                android:id="@+id/Cos"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="Save"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/sqrt"/>

        </LinearLayout>



</RelativeLayout>